<?xml version="1.0"?>
<project type="activity" builder="java">
    <name>Google Earth ViewSync Sniffer</name>
    <description>
An activity for sniffing Earth's viewsync datagrams and publishing the current location to a route.
    </description>

    <identifyingName>com.endpoint.lg.earth.viewsync</identifyingName>
    <version>1.1.0</version>

    <activity type="interactivespaces_native">
        <name>comEndpointLgEarthViewsync</name>
        <class>com.endpoint.lg.earth.viewsync.EarthViewsyncActivity</class>
        <configuration>
            <property name="space.activity.log.level">
                <value>info</value>
            </property>
            <property name="space.activity.ros.node.name">
                <value>liquidgalaxy/earth/viewsync/${space.activity.group}</value>
            </property>
            <property name="space.activity.routes.outputs">
                <value>view</value>
            </property>
            <property name="space.activity.route.output.view">
                <value>/liquidgalaxy/${space.activity.group}/earth/viewsync</value>
            </property>
            <!-- This is the Earth ViewSync port. -->
            <property name="lg.earth.viewSync.port">
                <value>42000</value>
            </property>
            <!-- This is the deferred port for our exclusive listener. socat will forward
            all ViewSync datagrams to this local port. -->
            <property name="lg.earth.viewSync.listenerPort">
                <value>42001</value>
            </property>
            <!-- This is the path to the socat binary. -->
            <property name="lg.native.socat.path">
                <value>/usr/bin/socat</value>
            </property>
        </configuration>
    </activity>
</project>
